<h1><%= @application.name %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= link_to @application.url, @application.url %></p>
  </div>  
</div>  
<!-- auth -->
  <%= link_to "Edit Application", edit_registered_application_path, class: 'btn btn-success' %>
  <%= link_to "Delete Applcation", @application, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?' } %> 
<!-- auth -->
<div class="row">
  <div class="col-md-6">
    <h3>Events</h3>
    <% @events.each do |key, array| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
 <!-- #8 -->
            <%= key %> (<%= array.length %>)
          </h4>
        </div>
      </div>
    <% end %>
  </div> 
  <div class="col-md-6">
    <div class="graph">
      <%= pie_chart @application.events.group(:name).count %>
    </div>
    <div class="graph">  
      <%= line_chart @application.events.group_by_day(:created_at).count %>
    </div>  
  </div> 
</div> 